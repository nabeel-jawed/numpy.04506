   "source": [
    "import numpy as np\n",
    "from PIL import Image\n",
    "\n",
    "\n",
    "img = Image.open('rgb_img.jpg' ,'r')\n",
    "img = img.convert('L')\n",
    "y = np.asarray(img.getdata(),dtype=np.float64).reshape((img.size[1],img.size[0]))\n",
    "\n",
    "y=np.asarray(y,dtype = np.uint8)\n",
    "w = Image.fromarray(y,mode=\"L\")\n",
    "w.save(\"gray.jpg\")\n",
    "w.show()\n"
   ]
